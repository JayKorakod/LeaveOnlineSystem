@model LeaveSystemOnline.LEAVEDATA

@{
    ViewBag.Title = "อนุมัติการขอลางาน";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div align="center">
        <h2 align="center">อนุมัติการขอลางาน</h2>
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-8">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.id)
                <table class="table table-hover table-responsive-block">
                    <tr>
                        <th><p>ชื่อ-นามสกุล</p></th>
                        <th><p>
                            @Html.DisplayFor(model => model.EMPLOYEE.firstName)
                            @Html.DisplayFor(model => model.EMPLOYEE.lastName)
                            </p>
                        </th>
                    </tr>
                    <tr>
                        <th><p>รหัสพนักงาน</p></th>
                        <th><p>@Html.DisplayFor(model => model.emp_id)</p></th>
                    </tr>
                    <tr>
                        <th><p>แผนก</p></th>
                        <th><p>@Html.DisplayFor(model => model.EMPLOYEE.department)</p></th>
                    </tr>
                    <tr>
                        <th><p>ประเภทการลา</p></th>
                        <th><p>@Html.DisplayFor(model => model.LEAVETYPE.type)</p></th>
                    </tr>
                    <tr>
                        <th><p>รายละเอียก/เหตุผลการลา</p></th>
                        <th><p>@Html.DisplayFor(model => model.description)</p></th>
                    </tr>
                    <tr>
                        <th><p>วันที่เริ่มต้นลา</p></th>
                        <th><p>@Html.DisplayFor(model => model.firstDayOfLeave)</p></th>
                    </tr>
                    <tr>
                        <th><p>วันที่สิ้นสุดการลา</p></th>
                        <th><p>@Html.DisplayFor(model => model.LastDayOfLeave)</p></th>
                    </tr>
                    <tr>
                        <th><p>ไฟล์ที่แนบ</p></th>
                        <th>
                            @Html.HiddenFor(model => model.fileDocument)
                            <a target="_blank" href="~/UploadFile/@{@Html.DisplayTextFor(model=>model.fileDocument)}">
                                <img src="@Url.Content("~/Content/Theme/menu/description.png")" />
                            </a>
                        </th>
                    </tr>
                </table>
                <br />
                <div class="form-group">
                    <p style="font-size:14px">อนุมัติ/ไม่อนุมัติ</p>
                    <div class="col-md-10">
                        อนุมัติ
                        @Html.RadioButtonFor(x => x.leaveStatus_id, 1, new { @id = "radio1" })
                        ไม่อนุมัติ
                        @Html.RadioButtonFor(x => x.leaveStatus_id, 2, new { @id = "radio2" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" value="บันทึก" class="btn btn-primary" id="save">บันทึก</button>
                    </div>
                </div>
                <div class="col-sm-3"></div>
            </div>
            </div>
    </div>
    //Hide For Update
    @Html.HiddenFor(model => model.emp_id)
    @Html.HiddenFor(model => model.description)
    @Html.HiddenFor(model => model.firstDayOfLeave)
    @Html.HiddenFor(model => model.LastDayOfLeave)
    @Html.HiddenFor(model => model.leaveType_id)
    @Html.HiddenFor(model => model.fileDocument)
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    function Alert_Approve() {
        Swal.fire({
            icon: 'success',
            title: 'อนุมัติขอลางาน',
            showConfirmButton: false,
            timer: 1500
        })
    }

    function Alert_NotApprove() {
        Swal.fire({
            icon: 'success',
            title: 'ไม่อนุมัติการขอลางาน',
            showConfirmButton: false,
            timer: 1500
        })
    }

    function Alert_Warning() {
        Swal.fire({
            icon: 'error',
            title: 'ผิดพลาด',
            text: 'กรุณาเลือกอนุมัติหรือไม่อนุมัติลางานด้วย !',
        })
    }

    $(document).ready(function () {
        $('#save').click(function () {
            if ($('#radio1').is(":checked")) {
                Alert_Approve();
            }
            else if ($('#radio2').is(":checked")) {
                Alert_NotApprove();
            }
            else {
                Alert_Warning();
                return false;
            }
        })
    })

</script>
