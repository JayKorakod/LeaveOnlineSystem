@model LeaveSystemOnline.LEAVEDATA

@{
    ViewBag.Title = "อนุมัติการขอลางาน";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div align="center">
        <h2 align="center">อนุมัติการขอลางาน</h2>
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-7">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.id)
                <table border="1">
                    <tr>
                        <th>ชื่อ-นามสกุล</th>
                        <th>
                            @Html.DisplayTextFor(model => model.EMPLOYEE.firstName)
                            @Html.DisplayTextFor(model => model.EMPLOYEE.lastName)
                        </th>
                    </tr>
                    <tr>
                        <th>รหัสพนักงาน</th>
                        <th>@Html.DisplayTextFor(model => model.emp_id)</th>
                    </tr>
                    <tr>
                        <th>แผนก</th>
                        <th>@Html.DisplayTextFor(model => model.EMPLOYEE.department)</th>
                    </tr>
                    <tr>
                        <th>ประเภทการลา</th>
                        <th>@Html.DisplayTextFor(model => model.LEAVETYPE.type)</th>
                    </tr>
                    <tr>
                        <th>รายละเอียก/เหตุผลการลา</th>
                        <th>@Html.DisplayTextFor(model => model.description)</th>
                    </tr>
                    <tr>
                        <th>วันที่เริ่มต้นลา</th>
                        <th>@Html.DisplayTextFor(model => model.firstDayOfLeave)</th>
                    </tr>
                    <tr>
                        <th>วันที่สิ้นสุดการลา</th>
                        <th>@Html.DisplayTextFor(model => model.LastDayOfLeave)</th>
                    </tr>
                    <tr>
                        <th>ไฟล์ที่แนบ</th>
                        <th>
                            @Html.HiddenFor(model => model.fileDocument)
                            <a href="~/UploadFile/@{@Html.DisplayTextFor(model=>model.fileDocument)}">@{@Html.DisplayTextFor(model => model.fileDocument)}</a>
                        </th>
                    </tr>
                </table>
                <br />
                <div class="form-group">
                    <p>อนุมัติ/ไม่อนุมัติ</p>
                    <div class="col-md-10">
                        อนุมัติ
                        @Html.RadioButtonFor(x => x.leaveStatus_id, 1, new { @id = "radio1" })
                        ไม่อนุมัติ
                        @Html.RadioButtonFor(x => x.leaveStatus_id, 2, new { @id = "radio2" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" value="บันทึก" class="btn btn-primary" id="save">บันทึก</button>
                    </div>
                </div>
                <div class="col-sm-3"></div>
            </div>
            </div>
    </div>
    //Hide For Update
    @Html.HiddenFor(model => model.emp_id)
    @Html.HiddenFor(model => model.description)
    @Html.HiddenFor(model => model.firstDayOfLeave)
    @Html.HiddenFor(model => model.LastDayOfLeave)
    @Html.HiddenFor(model => model.leaveType_id)
    @Html.HiddenFor(model => model.fileDocument)
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    function Alert_Approve() {
        Swal.fire({
            icon: 'success',
            title: 'อนุมัติขอลางาน',
            showConfirmButton: false,
            timer: 1500
        })
    }

    function Alert_NotApprove() {
        Swal.fire({
            icon: 'success',
            title: 'ไม่อนุมัติการขอลางาน',
            showConfirmButton: false,
            timer: 1500
        })
    }

    function Alert_Warning() {
        Swal.fire({
            icon: 'error',
            title: 'ผิดพลาด',
            text: 'กรุณาเลือกอนุมัติหรือไม่อนุมัติลางานด้วย !',
        })
    }

    $(document).ready(function () {
        $('#save').click(function () {
            if ($('#radio1').is(":checked")) {
                Alert_Approve();
            }
            else if ($('#radio2').is(":checked")) {
                Alert_NotApprove();
            }
            else {
                Alert_Warning();
                return false;
            }
        })
    })

</script>
