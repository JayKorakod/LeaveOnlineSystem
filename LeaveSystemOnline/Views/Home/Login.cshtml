@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    <fieldset>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="login-wrapper ">
            <!-- START Login Background Pic Wrapper-->
            <div class="bg-pic">
                x
                <!-- START Background Caption-->
                <div class="bg-caption pull-bottom sm-pull-bottom text-white p-l-20 m-b-20">
                    <h1 class="semi-bold text-white">
                        Welcome to Leave System Online
                    </h1>
                </div>
                <!-- END Background Caption-->
            </div>
            <!-- END Login Background Pic Wrapper-->
            <!-- START Login Right Container-->
            <div class="login-container bg-white">
                <div class="p-l-50 p-r-50 p-t-50 m-t-30 sm-p-l-15 sm-p-r-15 sm-p-t-40">
                    <img src="~/Content/Theme/login/video-call.png" alt="logo" height="150" width="150">
                    <h2 class="p-t-25"> ระบบลางานออนไลน์</h2>
                    <p class="mw-80 m-t-5">กรุณาเข้าสู่ระบบด้วยบัญชีของคุณ</p>
                    <!-- START Login Form -->
                    <form id="form-login" class="p-t-15" role="form" action="Index.html">
                        <!-- START Form Control-->
                        <div class="form-group form-group-default">
                            <label>Email</label>
                            <div class="controls">
                                <input required @Html.EditorFor(x => x.email, new { htmlAttributes = new { @class = "form-control", @maxlength = "30" } })
                            </div>
                        </div>
                        <!-- END Form Control-->
                        <!-- START Form Control-->
                        <div class="form-group form-group-default">
                            <label>Password</label>
                            <div class="controls">
                                <input required type="password" @Html.EditorFor(x => x.password, new { htmlAttributes = new { @class = "form-control", @maxlength = "6" } })
                            </div>
                        </div>
                        <!-- START Form Control-->
                        <div class="row">
                            <div class="col-md-12 d-flex align-items-center justify-content-end">
                                <button aria-label="" class="btn btn-primary btn-lg m-t-10" type="submit" id="login">เข้าสู่ระบบ</button>
                            </div>
                        </div>
                        <!-- END Form Control-->
                    </form>
                    <!--END Login Form-->
                    <div class="pull-bottom sm-pull-bottom">
                        <div class="m-b-30 p-r-80 sm-m-t-20 sm-p-r-15 sm-p-b-20 clearfix">
                            <div class="col-sm-9 no-padding m-t-10">
                                <p class="small-text normal hint-text">
                                    คณะวิทยาศาสตร์ประยุกต์ สาขาคณิตศาสตร์เชิงวิทยาการคอมพิวเตอร์ มหาวิทยาลัยเทคโนโลยีพระจอมเกล้าพระนครเหนือ Copyright © 2020. All Rights Reserved.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END Login Right Container-->
        </div>
    </fieldset>
}

