@model IEnumerable<LeaveSystemOnline.LEAVETYPE>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
     <ol class="breadcrumb breadcrumb-alt">
         <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
         <li class="breadcrumb-item">ประเภทการลา</li>
     </ol>
</div>
<br />
<div class="container container-fixed-lg">
    <div class="card card-default">
        <div class="card-body">
            <div class="form-group">
                <h3>ประเภทการลา</h3>
            </div>
            <br />
            <button type="button" onclick="Open_model()" class="btn btn-lg btn-primary pull-right">เพิ่ม</button>
            <table class="table" id="tableType">
                <tr>
                    <th class="text-center" style="width: 20px" scope="col">ลำดับ</th>
                    <th class="text-center" scope="col">ประเภทการลา</th>
                    <th class="text-center" scope="col">จำนวนวัน</th>
                    <th class="text-center" scope="col">รายละเอียด</th>
                    <th scope="col" class="text-center"></th>
                </tr>
                @{ int idx = 1;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center" scope="row">@idx</td>
                        <td class="text-center">
                            @item.type
                        </td>
                        <td class="text-center">
                            @item.numOfLeave
                        </td>
                        <td class="text-center">
                            @item.description
                        </td>
                        <td class="text-center">
                            <button type="button" onclick="Open_model()" class="btn btn-lg btn-primary pull-right">แก้ไข</button>
                        </td>
                    </tr>
                    idx++;
                }
            </table>
        </div>
    </div>
</div>

