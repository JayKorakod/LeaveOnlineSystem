@model IEnumerable<LeaveSystemOnline.LEAVEDATA>

@{
    ViewBag.Title = "History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-white">
    <div class="container">
        <ol class="breadcrumb breadcrumb-alt">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
            <li class="breadcrumb-item">รายงานการลาของแผนก</li>
        </ol>
    </div>
</div>
<br />
<div class="container container-fixed-lg">
    <div class="card card-default">
        <div class="card-body">
            <div class="form-group">
                <h3>ประวัติการลางาน</h3>
            </div>
            <br />
            @using (Html.BeginForm("History", "ReportLeaveDataDepart", FormMethod.Get))
            {
                <div class="row">
                    <div class="col-md-6">
                    </div>
                    <div class="col-md-5">
                        <input type="email" name="search" class="form-control" placeholder="Search..."/>
                    </div>
                    <div class="col-md-1">
                        <input type="submit" name="submit" value="Search" class="btn btn-primary" />
                    </div>
                </div>
             }
             <br />
             <div style="overflow:auto">
                 <table class="table table-hover table-responsive-block" id="tableWithSearch">
                     <thead>
                         <tr>
                             <th>
                                 รหัสใบลางาน
                             </th>
                             <th>
                                 วันที่เริ่มลา
                             </th>
                             <th>
                                 วันที่สิ้นสุดการลา
                             </th>
                             <th>
                                 ไฟล์แนบ
                             </th>
                             <th>
                                 ประเภท
                             </th>
                             <th>
                                 สถานะ
                             </th>
                         </tr>
                     </thead>
                     <tbody>
                         @foreach (var item in Model)
                         {
                             <tr>
                                 <td>
                                     @item.id
                                 </td>
                                 <td>
                                     @item.firstDayOfLeave
                                 </td>
                                 <td>
                                     @item.LastDayOfLeave
                                 </td>
                                 <td>
                                     @item.fileDocument
                                 </td>
                                 <td>
                                     @item.LEAVETYPE.type
                                 </td>
                                 <td>
                                     @item.LEAVESTATUS.status
                                 </td>
                             </tr>
                         }
                     </tbody>
                 </table>
             </div>
        </div>
    </div>
</div>