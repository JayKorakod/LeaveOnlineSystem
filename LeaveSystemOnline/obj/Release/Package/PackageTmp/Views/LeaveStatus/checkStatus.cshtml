@model IEnumerable<LeaveSystemOnline.LEAVEDATA>
@{
    ViewBag.Title = "เช็คสถานะการลา";
}

@using (Html.BeginForm("cancleLeave", "LeaveStatus", FormMethod.Post, new { name = "cancleStatus", id = "cancleStatus" }))
{
    <input type="hidden" name="id" />
}
<div class="container container-fixed-lg">
    <div class="card card-default">
        <div class="card-body">
            @using (Html.BeginForm("checkStatus", "LeaveStatus", FormMethod.Get))
            {
                <h4 align="center">ตรวจสอบสถานะ</h4>
                <div class="row">
                    <div class="col-md-4">
                    </div>
                    <div class="col-md-4">
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <table>
                                <tr>
                                    <th><input type="text" name="search" class="form-control" placeholder="ค้นหาด้วยหมายเลขใบลางาน" /></th>
                                    <th><input type="submit" name="submit" value="ค้นหา" class="btn btn-primary" /></th>
                                    <th>
                                        <a href="@Url.Action("checkStatus", "LeaveStatus")">
                                            <img src=@Url.Content("~/Content/Theme/menu/refresh-64.png") width="40" height="40" />
                                        </a>
                                    </th>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            }
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            <p style="font-size:16px">รหัสใบลา</p>
                        </th>
                        <th>
                            <p style="font-size:16px">ประเภทการลา</p>
                        </th>
                        <th>
                            <p style="font-size:16px">วันที่เริ่มลา</p>
                        </th>
                        <th>
                            <p style="font-size:16px">วันที่สิ้นสุดการลา </p>
                        </th>
                        <th>
                            <p style="font-size:16px">สถานะ</p>
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="7" style="color:red" align="center">
                            <p style="font-size:20px">ไม่พบข้อมูล</p>
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tbody>
                            <tr>
                                <td class="item-id">
                                    <p style="font-size:14px">@Html.DisplayFor(modelItem => item.id)</p>
                                </td>
                                <td>
                                    <p style="font-size:14px">@Html.DisplayFor(modelItem => item.LEAVETYPE.type)</p>
                                </td>
                                <td>
                                    <p style="font-size:14px">@Html.DisplayFor(modelItem => item.firstDayOfLeave)</p>
                                </td>
                                <td>
                                    <p style="font-size:14px">@Html.DisplayFor(modelItem => item.LastDayOfLeave)</p>
                                </td>
                                <td>
                                    <p style="font-size:14px">@Html.DisplayFor(modelItem => item.LEAVESTATUS.status)</p>
                                </td>
                                @{ var id = Convert.ToInt32(Session["id"]);}
                                <td>
                                    @if (item.LEAVESTATUS.status == "รอการอนุมัติ" && item.emp_id == id)
                                    {
                                        <input type="button" value="ยกเลิก" class="btn btn-danger" id="cancel" />
                                    }
                                </td>
                            </tr>
                        </tbody>
                    }
                }
            </table>
        </div>
    </div>
</div>

 @section Scripts
{
<script>
    $(".btn-danger").click(function () {
        if (Swal.fire({
            title: 'ต้องการยกเลิกใช่ไหม?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'ยืนยัน!'
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    icon: 'success',
                    title: 'ยกเลิกการขอลางานสำเร็จ',
                }
                )
                var id = $(this).closest("tr").find(".item-id").text();
                document.cancleStatus.id.value = id;
                document.getElementById("cancleStatus").submit();
            } return false;
        })) {
        }
    });

    //$("#cancel").click(function () {
    //    Alert_confirm();
    //    return false;
    //    var id = $(this).closest("tr").find(".item-id").text();
    //    document.cancleStatus.id.value = id;
    //    document.getElementById("cancleStatus").submit();
    //});

    function Alert_confirm() {
        Swal.fire({
            title: 'ต้องการยกเลิกใช่ไหม?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'ยืนยัน!'
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    icon: 'success',
                    title: 'ยกเลิกการขอลางานสำเร็จ',
                } 
                )
            } return false;
        })
    }
</script>
}
