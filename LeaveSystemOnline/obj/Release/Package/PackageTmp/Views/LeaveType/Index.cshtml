@model IEnumerable<LeaveSystemOnline.LEAVETYPE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container container-fixed-lg">
    <div class="card card-default">
        <div class="tools">
        </div>
        <div class="card-body">
            <div style="overflow:auto">
                    <table class="table table-hover table-responsive-block" id="tableWithSearch">
                        <thead>
                            <tr>
                                <th class="text-center" style="width: 10px" scope="col">ลำดับ</th>
                                <th class="text-center" scope="col">ประเภทการลา</th>
                                <th class="text-center" scope="col">จำนวนวัน</th>
                                <th class="text-center" scope="col" style="width: 500px">รายละเอียด</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int idx = 1;}
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="v-align-middle" scope="row">@item.id</td>
                                    <td class="v-align-middle">
                                        @item.type
                                    </td>
                                    <td class="v-align-middle">
                                        @item.numOfLeave
                                    </td>
                                    <td class="v-align-middle">
                                        @item.description
                                    </td>
                                </tr>
                                idx++;
                            }
                        <tbody>
                    </table>
            </div>
        </div>
    </div>
</div>
